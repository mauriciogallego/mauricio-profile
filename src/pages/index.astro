---
import { changeLanguage, t } from 'i18next';
import { differenceInYears } from 'date-fns';
import Layout from '@/layouts/Layout.astro';
import Title from '@/components/astro/Title/Title.astro';
import Avatar from '@/components/astro/Avatar/Avatar.astro';
import { technologies } from '@/constants';

changeLanguage('en');

const years = differenceInYears(new Date(), new Date('01/09/2019'));
---

<Layout>
  <div class="flex flex-col sm:flex-row items-center pt-22">
    <div class="pt-40 sm:py-60 md:min-h-[105vh]">
      <p class="tracking-widest text-neon-green animate-fade-up">
        {t('greetings')}
      </p>
      <h1
        class="tracking-widest animate-delay-500 text-white text-3xl sm:text-5xl md:text-7xl font-bold mt-3 animate-fade-up"
      >
        Mauricio Gallego
      </h1>
      <h2
        class="tracking-widest text-white-dark text-2xl md:text-4xl font-bold mt-2 animate-fade-up"
      >
        {t('mainInfo')}
      </h2>
      <p
        class="text-white-dark font-thin md:w-1/2 tracking-wider mt-5 leading-8 animate-fade-up"
      >
        {t('aboutMyself')}<a
          class="text-neon-green font-bold"
          target="_blank"
          href="https://sysgarage.com/">Sysgarage.</a
        >
      </p>
    </div>
    <div id="avatar" class="my-10 sm:w-1/3" transition:persist>
      <Avatar />
    </div>
  </div>
  <div class="mb-28">
    <Title header="about" />
    <div class="md:w-2/3 mt-10 space-y-4">
      <p class="font-thin tracking-wider text-white-dark">
        {t('descriptionAboutMe', { years })}
      </p>
      <p class="font-thin tracking-wider text-white-dark">
        {t('descriptionAboutMeTwo')}
      </p>
      <p class="font-thin tracking-wider text-white-dark">
        {t('descriptionAboutMeThree')}
      </p>
      <p class="font-thin tracking-wider text-white-dark">
        {t('descriptionAboutMeFour')}
      </p>
      <div class="pt-8 max-w-xl">
        <p class="tracking-wider font-semibold text-white-dark">
          {t('someTechnologies')}
        </p>
        <ul class="grid grid-cols-2 gap-1 mt-4">
          {
            technologies.map((tech) => (
              <li class="flex ease-in duration-200 hover:font-bold font-thin items-center text-white-dark before:text-neon-green before:content-['â–¹'] before:text-[8px] before:mx-3">
                <a href={tech.url} target="_blank">
                  {tech.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</Layout>
